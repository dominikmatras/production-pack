generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_ORDER")
}

model Order {
  id             String      @id @default(uuid())
  product        String
  productNumber  String
  quantity       Int
  productionLine String
  targetDate     DateTime
  targetHour     String
  status         OrderStatus
  createdAt      DateTime    @default(now())

  startedAt      DateTime?
  pausedAt       DateTime?
  resumedAt      DateTime?
  stoppedAt      DateTime?
}

enum OrderStatus {
  CREATED
  IN_PROGRESS
  PAUSED
  COMPLETED
  CANCELLED
}