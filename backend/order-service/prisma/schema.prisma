generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id             String      @id @default(uuid())
  product        String
  productNumber  String
  quantity       Int
  productionLine String
  targetDate     DateTime
  targetHour     String
  status         OrderStatus @default(CREATED)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  startedAt      DateTime?
  pausedAt       DateTime?
  resumedAt      DateTime?
  stoppedAt      DateTime?

  pauseReasonCode        String?
  pauseReasonDescription String?
}

enum OrderStatus {
  CREATED
  IN_PROGRESS
  PAUSED
  COMPLETED
  CANCELLED
}